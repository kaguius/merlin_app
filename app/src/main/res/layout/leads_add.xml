<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/registration_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lyt_phone_lds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_phone_lds"
                    style="@style/AllEdiText"
                    android:hint="Phone"
                    android:inputType="number"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/lyt_first_name_lds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_first_name_lds"
                    style="@style/AllEdiText"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lyt_last_name_lds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_last_name_lds"
                    style="@style/AllEdiText"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info_spinner"
                    style="@style/AllTextView"
                    android:text="Info Sources" />

                <Spinner
                    android:id="@+id/spInfoSources"
                    style="@style/AllSpinner"
                    android:paddingLeft="10dp"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lo_spinner"
                    style="@style/AllTextView"
                    android:text="Loan Officer" />

                <Spinner
                    android:id="@+id/spLoanOfficer"
                    style="@style/AllSpinner"
                    android:paddingLeft="10dp"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/co_spinner"
                    style="@style/AllTextView"
                    android:text="Collections Officer" />

                <Spinner
                    android:id="@+id/spCollectionsOfficer"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lyt_OtherSources_lds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etOtherSources"
                    style="@style/AllMultiline"
                    android:hint="Other Sources"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leads_outcome_spinner"
                    style="@style/AllTextView"
                    android:text="Outcome" />

                <Spinner
                    android:id="@+id/leads_sp_outcome"
                    style="@style/AllSpinner"
                    android:paddingLeft="10dp"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lyt_next_visit_lds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/leads_txt_next_visit"
                    style="@style/AllEdiText"
                    android:hint="Next Visit Date"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lyt_outcome_explanation_lds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/leads_txt_outcome_explanation"
                    style="@style/AllMultiline"
                    android:hint="Outcome Explanation"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@drawable/loginbutton_bg"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Cancel" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>