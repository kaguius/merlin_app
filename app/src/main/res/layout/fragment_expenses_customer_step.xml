<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.business.siteVisitSteppers.PersonalStep">

    <ScrollView style="@style/StdScroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHouseType"
                    style="@style/AllTextView"
                    android:text="House Type" />

                <Spinner
                    android:id="@+id/spHouseType"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytHomeRent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvHomeRent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Home Rent"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytHouseUtilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvHouseUtilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House Utilities"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytFoodCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvFoodCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Food Cost"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytSchoolFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvSchoolFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="School Fees"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytSavingAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvSavingAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Saving Amount"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
