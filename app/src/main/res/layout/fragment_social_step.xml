<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.business.siteVisitSteppers.SocialStep">

    <ScrollView style="@style/StdScroll">

        <LinearLayout style="@style/StdLinear">

            <CheckBox
                android:id="@+id/has_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a bank account?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAccountOrg_W"
                    style="@style/AllTextView"
                    android:text="Which Organisation?" />

                <Spinner
                    android:id="@+id/spAccountOrg_W"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />


            <CheckBox
                android:id="@+id/ever_taken_loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you ever taken a loan?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_evertaken_loan"
                    style="@style/AllTextView"
                    android:text="Which Organisation?" />

                <Spinner
                    android:id="@+id/sp_loan_organisation"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />


            <CheckBox
                android:id="@+id/have_credit_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have other access to credit?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_other_creditors"
                    style="@style/AllTextView"
                    android:text="Which Organisation?" />

                <Spinner
                    android:id="@+id/sp_other_creditors"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />


            <CheckBox
                android:id="@+id/ch_current_loan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a current loan?" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytLoanBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvLoanBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Loan Balance"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_current_loan_org"
                    style="@style/AllTextView"
                    android:text="Which Organisation?" />

                <Spinner
                    android:id="@+id/sp_current_loan_org"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytAverageDailyCustomers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvAverageDailyCustomers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Average Daily Customers"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/ch_employed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you employed?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_education_level"
                    style="@style/AllTextView"
                    android:text="Customer education level" />

                <Spinner
                    android:id="@+id/sp_education_level"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
