<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.business.siteVisitSteppers.ExpensesStep">

    <ScrollView style="@style/StdScroll">

        <LinearLayout style="@style/StdLinear">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytBusinessRent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvBusinessRent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business Rent"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytBusinessUtilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvBusinessUtilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business Utilities [Electricity + Water Bills]"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNoOfEmployees_W"
                    style="@style/AllTextView"
                    android:text="No of Employees" />

                <Spinner
                    android:id="@+id/spNoOfEmployees_W"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNatureOffEmployment_W"
                    style="@style/AllTextView"
                    android:text="Nature of Employment" />

                <Spinner
                    android:id="@+id/spNatureOffEmployment_W"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytEmployeeSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvEmployeeSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Employee Salary"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytLicensingFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvLicensingFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Licensing Fee"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytStorageFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvStorageFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Storage Fee"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytTransportFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvTransportFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Transport Fee"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
