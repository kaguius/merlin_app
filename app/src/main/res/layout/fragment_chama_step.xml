<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.business.siteVisitSteppers.ChamaStep">

    <ScrollView style="@style/StdScroll">

        <LinearLayout style="@style/StdLinear">

            <CheckBox
                android:id="@+id/chInaChama_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you in a Chama?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvChamaCycle_W"
                    style="@style/AllTextView"
                    android:text="Chama Cycle *" />

                <Spinner
                    android:id="@+id/spChamaCycle_W"
                    android:prompt="@string/spinner_title"
                    style="@style/AllSpinner"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytChamaContribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvChamaContribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chama Contribution"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytChamaMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvChamaMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chama Members"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytPayoutFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvPayoutFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Payout Frequency"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytPayoutAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvPayoutAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Payout Amount"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/chHasRecords_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Records Available?"
                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
