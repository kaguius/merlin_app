<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.business.siteVisitSteppers.IncomeStep">

    <ScrollView style="@style/StdScroll">

        <LinearLayout style="@style/StdLinear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBusinessCycle_W"
                    style="@style/AllTextView"
                    android:text="Business Cycle *" />

                <Spinner
                    android:id="@+id/spBusinessCycle_W"
                    style="@style/AllSpinner"
                    android:prompt="@string/spinner_title"
                    android:spinnerMode="dialog"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytCurrentStockValue"
                style="@style/AllEdiText">

                <EditText
                    android:id="@+id/tvCurrentStockValue"
                    style="@style/AllEdiText"
                    android:hint="Current Stock Value"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytSalesValue"
                style="@style/AllEdiText">

                <EditText
                    android:id="@+id/tvSalesValue"
                    style="@style/AllEdiText"
                    android:hint="Sales Value"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytStockValue"
                style="@style/AllEdiText">

                <EditText
                    android:id="@+id/tvStockValue"
                    style="@style/AllEdiText"
                    android:hint="Spend on Stock"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytIncomeExplanation"
                style="@style/AllEdiText">

                <EditText
                    android:id="@+id/tvIncomeExplanation"
                    style="@style/AllMultiline"
                    android:hint="Income Explanation" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytRestockingFrequency"
                style="@style/AllEdiText">

                <EditText
                    android:id="@+id/tvRestockingFrequency"
                    style="@style/AllEdiText"
                    android:hint="Restocking Frequency"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
