<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.business.siteVisitSteppers.AssessmentStep">

    <ScrollView style="@style/StdScroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEvidenceOfSalesActivity"
                style="@style/AllTextView"
                android:text="" />

            <CheckBox android:id="@+id/chStockNeat_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Neat"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chAccurateLedger_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accurate Ledger Book"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chSalesActivity_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evidence of Sales Activity"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chPermanentOperations_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evidence of Permanent Operation"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chProofOfOwnership_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proof of Ownership"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chFortcoming_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forthcoming and Transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chKnownAuthority_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Known to Market Authorities"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chSoundReputation_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sound Reputation"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <CheckBox android:id="@+id/chWouldLend_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Would I Lend?"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lytLendAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/tvLendAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="If yes, how much?"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
